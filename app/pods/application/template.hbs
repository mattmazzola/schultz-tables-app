<header>
  <h1 class="banner">
    {{#link-to "index" classNames="home-link"}}
      <div class="simulatedIcon">
        <div>1</div>
        <div>2</div>
        <div>3</div>
        <div>4</div>
      </div>
      <div class="label">Schultz Tables</div>
    {{/link-to}}
  </h1>
  <nav>
    {{#link-to "index" classNames="link"}}
      <div class="icon"><i class="material-icons">home</i></div>
      <div class="label">Home</div>
    {{/link-to}}
    {{#link-to "scores" classNames="link"}}
      <div class="icon"><i class="material-icons">format_list_numbered</i></div>
      <div class="label">Scores</div>
    {{/link-to}}
    {{#link-to "users.index" classNames="link"}}
      <div class="icon"><i class="material-icons">group</i></div>
      <div class="label">Users</div>
    {{/link-to}}
    {{#if session.isAuthenticated}}
      {{#link-to "users.user" sessionAccount.userAuthData.id classNames="link"}}
        <div class="icon"><i class="material-icons">account_circle</i></div>
        <div class="label">Profile</div>
      {{/link-to}}
    {{/if}}
  </nav>
</header>
<main>
{{outlet}}
</main>