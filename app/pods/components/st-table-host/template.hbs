<div class="st-table-host__controls">
  <button type="button" {{action "start"}}>{{#if isTableCompleted 'st-table--completed'}}Re-{{/if}}Start</button>
  {{!--<button type="button" {{action "clear"}}>Clear</button>--}}
</div>

<div class="st-table-host__table-container-outer">
  <div class="st-table-host__table-container">
    {{#if table}}
      <dl class="st-table-host_metadata">
        <di>Expected Symbol:</di>
        <dd>{{expectedSymbol}}</dd>
        {{#if isTableCompleted 'st-table--completed'}}
          <di>Duration:</di>
          <dd>{{duration}}</dd>
          <di>Completed!</di>
        {{/if}}
      </dl>
      <div class="st-table {{if isTableCompleted 'st-table--completed'}}">
        {{#each table.cells as |cell i|}}
          <div class="st-table__cell" {{action "selectCell" cell}}>
            {{cell.text}}
          </div>
        {{/each}}
      </div>
    {{/if}}
  </div>
</div>
