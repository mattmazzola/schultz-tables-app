<div>
  <div class="st-score__header" {{action "toggle"}}>
    <div class="st-score__header-name">
      {{score.user.name}}
    </div>
    <div class="st-score__header-duration">
     {{durationAsSeconds}} s
    </div>
  </div>
  {{#if isOpen}}
    <div class="st-score__body">
      {{#unless score.details.isLoaded}}
      <div class="st-score__body-loading center">Loading...</div>
      {{else}}
        <div>Size:</div>
        <div>{{score.details.tableType.width}}w &times; {{score.details.tableType.height}}h</div>
        <div>Properties:</div>
        <div> 
          <ul>
            {{#each score.details.tableType.properties as |property|}}
            <li>{{property.key}}: {{property.value}}</li>
            {{/each}}
          </ul>
        </div>
        <div>Start Time:</div>
        <div>{{moment-format score.details.startTime 'MMMM D, h:mm:ss.SSS a'}}</div>
        <div>End Time:</div>
        <div>{{moment-format score.details.endTime 'MMMM D, h:mm:ss.SSS a'}}</div>
        Sequence:
        <div class="st-score-sequence">
        {{#each score.details.sequence as |sequence|}}
          <div>{{#if sequence.correct}}-{{else}}&times;{{/if}}</div><div>{{sequence.cell.text}}</div><div>+{{st-time-difference sequence.time score.details.startTime}}</div>
        {{/each}}
        </div>
      {{/unless}}
    </div>
  {{/if}}
</div>
